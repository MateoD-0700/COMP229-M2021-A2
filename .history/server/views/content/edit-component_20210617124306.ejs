<div class="row justify-content-md-center">
    <div class="col-8">
        
        <form method="POST">
            <div class="form-group">
              <label for="partID">Person ID</label>
              <input type="text" class="form-control" id="partID" aria-describedby="partID" 
              name="partID" placeholder="Enter Person ID" value="<%=data.partID %>"
              required>
            </div>

            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="name" aria-describedby="name" 
                name="name" placeholder="Enter Name"  value="<%=data.name %>"
                required>
              </div>
              
              <div class="form-group">
                <label for="description">Phone Number</label>
                <input type="text" class="form-control" id="name" aria-describedby="name" 
                name="name" placeholder="Enter Name"  value="<%=data.description %>"
                required>
              </div>
              
              <div class="form-group">
                <label for="price">E-mail</label>
                <input type="text" class="form-control" id="price" aria-describedby="price" 
                name="price" placeholder="Enter E-mail Address" value="<%=data.price %>"
                required>
              </div>
            
            <button type="submit" class="btn btn-primary btn-lg"><i class="fas fa-edit"></i> Edit</button>
            <a href="/component-list" class="btn btn-warning btn-lg"><i class="fas fa-undo"></i> Cancel</a>
          </form>

    </div>
</div>