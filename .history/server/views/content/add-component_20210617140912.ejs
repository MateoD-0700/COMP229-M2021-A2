<div class="row justify-content-md-center">
    <div class="col-8">
        
        <form method="POST">
            <div class="form-group">
              <label for="partID">Person ID</label>
              <input type="text" class="form-control" id="partID" aria-describedby="partID" 
              name="partID" placeholder="Enter Person ID"
              required>
            </div>

            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="name" aria-describedby="name" 
                name="name" placeholder="Enter Name"
                required>
              </div>
              
              <div class="form-group">
                <label for="description">Phone Number</label>
                <textarea class="form-control" id="description" rows="3"
                name="description" placeholder="Enter Phone Number" required
                ></textarea>
              </div>
              
              <div class="form-group">
                <label for="price">E-mail</label>
                <input type="text" class="form-control" id="price" aria-describedby="price" 
                name="price" placeholder="Enter E-mail Address"
                required>
              </div>
            
            <button type="submit" class="btn btn-primary btn-lg"><i class="fas fa-plus-circle"></i> Add a new contact</button>
            <a href="/component-list" class="btn btn-warning btn-lg"><i class="fas fa-undo"></i> Cancel</a>
          </form>

    </div>
</div>